<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.com.vnpt.myvnpt.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:src="@mipmap/vnpt" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#060cc2"
            app:title="Tra Cứu Thông Tin Sim"
            app:titleTextColor="#fffefe"></android.support.v7.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/editTim"
            android:layout_width="269dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:hint="Nhập sđt"
            android:inputType="number"
            android:phoneNumber="true"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_tim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tìm" />
    </LinearLayout>
    <ListView
        android:id="@+id/lvDanhSack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
