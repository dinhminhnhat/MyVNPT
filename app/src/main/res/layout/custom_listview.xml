<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <android.support.v4.widget.CircleImageView
        android:id="@+id/imv_daidien"
        android:layout_width="110sp"
        android:layout_height="110sp"
        android:src="@mipmap/ic_launcher" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:id="@+id/tv_sosim"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:hint="so sim"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_thongtin"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:hint="thong tin nguoi dung"
                    />

                <TextView
                    android:id="@+id/tv_giasim"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:hint="gia sim" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_trangthaisim"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:hint="trang thai sim"
                    android:layout_marginLeft="10sp"
                    />

                <TextView
                    android:id="@+id/tv_nhomsim"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:hint="loai sim"
                    android:layout_marginLeft="10sp"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>