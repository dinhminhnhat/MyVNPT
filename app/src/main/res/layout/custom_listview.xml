<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:orientation="horizontal">

    <ImageView
        android:padding="5dp"
        android:id="@+id/imv_daidien"
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:id="@+id/tv_sosim"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:hint="so sim"
        android:gravity="center|left"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_thongtin"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:hint="thong tin nguoi dung"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/tv_giasim"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:hint="gia sim"
                    android:gravity="center|left"
                    android:textSize="13dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_trangthaisim"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:hint="trang thai sim"
                    android:layout_marginLeft="10sp"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/tv_nhomsim"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:hint="loai sim"
                    android:layout_marginLeft="10sp"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>